---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const sortedTricks = (await getCollection('trick')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const tricks = sortedTricks.slice(0, 2);

const sortedSlides = (await getCollection('slide')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const slides = sortedSlides.slice(0, 2);

---

<!DOCTYPE html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main class="main">
			<section class="c">
				<h1>ðŸ”¥ you're fired, you know?</h1>
				<p>
					TODO: habilitar en la HOME listado de dos Ãºltimas Tricks y Slides
				</p>
				<h2>Tricks</h2>
				<ul>
					{
						tricks.map((trick) => (
							<li>
								<a href={`/trick/${trick.slug}/`}>
									{trick.data.heroImage && 
										<img width={720} height={360} src={trick.data.heroImage} alt="" />
									}
									<h4 class="title">{trick.data.title}</h4>
								</a>
							</li>
						))
					}
				</ul>
				<h2>Slides</h2>
				<ul>
					{
						slides.map((slide) => (
							<li>
								<a href={`/slide/${slide.slug}/`}>
									<h4 class="title">{slide.data.title}</h4>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
